<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#F6D55C"
        android:padding="15dp"
        android:textSize="30dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TableRow android:layout_weight="1">


            <Button
                android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="1"
                android:textSize="25dp" />


            <Button
                android:id="@+id/but2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="2"
                android:textSize="25dp" />

            <Button
                android:id="@+id/but3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="3"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/butplus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="+"
                android:textSize="25dp"/>

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/but4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="4"
                android:textSize="25dp" />

            <Button
                android:id="@+id/but5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="5"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/but6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="6"
                android:textSize="25dp" />

            <Button
                android:id="@+id/butminus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="-"
                android:textSize="25dp"/>

        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/but7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="7"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/but8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="8"
                android:textSize="25dp" />

            <Button
                android:id="@+id/but9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="9"
                android:textSize="25dp" />

            <Button
                android:id="@+id/butgob"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="*"
                android:textSize="25dp"/>


        </TableRow>

        <TableRow android:layout_weight="1">


            <Button
                android:id="@+id/butclear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="C"
                android:textSize="25dp" />

            <Button
                android:id="@+id/but0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="0"
                android:textSize="25dp" />

            <Button
                android:id="@+id/butna"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="/"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/butnun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="="
                android:textSize="25dp"/>


        </TableRow>

    </TableLayout>


</LinearLayout>